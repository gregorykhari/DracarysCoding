        <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="dragonairBreeders.css">
    </head>
    <body>
                <div class="container">
            <div class = "jumbotron ">
                <div class = "row">
                    <div class = "col-md-4 col-sm-4 col-xs-12"></div>
                    <div class = "col-md-4 col-sm-4 col-xs-12">
                        <div class = "row">
                            <h1>Dragonair Breeding</h1>
                        </div>
                    </div>
                    <div class = "col-md-4 col-sm-4 col-xs-12"></div>
               </div>
            </div>
        </div>
        <div class = "row">
               <div class = "col-md-4 col-sm-4 col-xs-12"></div>
               <div class = "col-md-4 col-sm-4 col-xs-12">
                    <form id = "theForm" class = "form-container" action = "/releaseDragon" enctype="multipart/form-data" method='POST'>
                        <div class = "form-group">
                            <label for="dragonID">Dragon ID</label>
                            <input type="text" class="form-control" id="dragonID" name= "dragonID" placeholder= "Enter ID of Dragon To Be Released">
                        </div>
                        <div class = "form-group">
                            <label for="caretakerID">Caretaker ID</label>
                            <input type="text" class="form-control" id="caretakerID" name="caretakerID" placeholder= "Enter ID of Dragon Caretaker">
                        </div>
                        <button type="submit" class="btn btn-primary">Release Dragon</button>
                        <a class="btn btn-primary" href="admin" role="button">Cancel</a>
                   </form>
                </div>
            <div class = "col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </body>
    <script>
    	window.onload = function () {
  var form = document.getElementById('theForm');
  form.button.onclick = function (){
    for(var i=0; i < form.elements.length; i++){
      if(form.elements[i].value === '' && form.elements[i].hasAttribute('required')){
        alert('There are some required fields!');
        return false;
      }
    }
    form.submit();
  }; 
};
    </script>
        <style>
body {
        color: white;
}
